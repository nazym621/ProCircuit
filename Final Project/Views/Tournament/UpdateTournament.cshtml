@model Tournament

<h2>UpdateTournament @Model.Name</h2>

@using (Html.BeginForm("UpdateTournamentToDatabase", "Tournament", "Post"))
{
    <input asp-for="TournamentID" type="hidden" value="@Model.TournamentID" />

    <label asp-for="Name" class="control-label">Name</label>

    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Total_Prize" class="control-label">Total_Prize</label>

    <input type="number" step="0.01" name="Total_Prize" class="form-control" value="@Model.Total_Prize" />

    <input type="submit" value="Update Tournament" class="btn btn-primary" />

}


