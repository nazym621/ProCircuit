@model CircuitTournaments
<h2>Create a New Credit</h2>
@using (Html.BeginForm("InsertTournamentsToDatabase", "Tournaments", "Post"))
{
    <input asp-for="Tournament_ID" type="hidden" value="" />
    <label asp-for="Event_ID" class="control-label">Event</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="Result_ID" class="control-label">Result</label>
    <input type="number" step="0.01" name="Result" class="form-control" />
    <div class="form-group">
        <label for="">Select a Tournament</label>
        <select class="form-control" name="Tournament_ID" value="">
            @foreach (var cat in Model.Tournament)
            {
                <option value="@cat.Tournament_ID">@cat.Tournament_ID @cat.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="Upload Tournaments" class="btn btn-primary" />
}


