@model Aggregate_Credit
<h2>Create a New Credit</h2>
@using (Html.BeginForm("InsertCreditToDatabase", "Credit", "Post"))
{
    <input asp-for="Tournament_ID" type="hidden" value="" />
    <label asp-for="Event_ID" class="control-label">Event</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="Result_ID" class="control-label">Result</label>
    <input type="number" step="0.01" name="Result" class="form-control" />
    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="Create Credit" class="btn btn-primary" />
}


